{
  "name": "@erold/cli",
  "version": "1.0.0",
  "description": "Erold CLI - Command-line tool for AI-native project management",
  "author": "Erold",
  "license": "MIT",
  "type": "module",
  "bin": {
    "erold": "./bin/erold.js"
  },
  "main": "./src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./lib/*": "./src/lib/*.js"
  },
  "files": [
    "bin",
    "src",
    "README.md"
  ],
  "scripts": {
    "start": "node bin/erold.js",
    "dev": "node --watch bin/erold.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "conf": "^12.0.0",
    "inquirer": "^9.2.23",
    "ora": "^8.0.1",
    "cli-table3": "^0.6.5",
    "boxen": "^7.1.1",
    "open": "^10.1.0"
  },
  "devDependencies": {
    "vitest": "^2.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "cli",
    "project-management",
    "tasks",
    "ai",
    "claude",
    "mcp",
    "erold"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/erold-dev/cli"
  },
  "bugs": {
    "url": "https://github.com/erold-dev/cli/issues"
  },
  "homepage": "https://erold.dev",
  "publishConfig": {
    "access": "public"
  }
